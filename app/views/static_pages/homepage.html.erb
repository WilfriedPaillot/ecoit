<!-- BANNER SECTION  -->
<section class="row py-5 mb-5 bg-primary">
    <div class="col-md-6 text-center"> 
        <%= image_tag("banner_index.jpg", alt:"Photo de startupeurs", class:"img-fluid", width:"500") %>
    </div>
    <div class="col-md-6">
        <h1 class="text-secondary ">EcoDevIt!</h1>
        <h2 class="text-light">La nouvelle plateforme web d'apprentissage éco-responsable</h2>
        <p class="text-light lead fs-4">
            <%if current_user %>
            <%= current_user.nickname %>, suivez
            <%end%> 
            Vos règles, Votre rythme, Votre communauté !
        </p>
        <div class="row">
        <div class="col-md-8 d-flex justify-content-center pt-5">
            <%if !user_signed_in? %>
                <%= link_to("S'inscrire",new_user_registration_path, class:"btn btn-outline-secondary btn-lg text-light mx-3", method:"get") %>
                <%= link_to("Se connecter",new_user_session_path, class:"btn btn-outline-secondary btn-lg text-light mx-3", method:"get") %>
            <%end%>
        </div>
        </div>
    </div>
</section>

<!-- PRESENTATION SECTION -->
  <section class="container">
    <h1 class="orange_underline">EcoDevIt, en quelques mots</h1>
    
    <div class="row justify-content-between py-5">
      <div class="col-lg-3 col-md-6">
        <div class="card-1">
          <div class="card-body">
            <div class="fs-6 mb-3">
              <i class="bi bi-book-half fs-1"></i>
            </div>
            <h5 class="card-title">Apprentissage</h5>
            <p class="card-text">Apprendre par la pratique, de manière concise et explicite grâce à des expériences d’apprentissage d’autres membres de la communauté.</p>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6">
        <div class="card-2">
          <div class="card-body">
            <div class="fs-6 mb-3">
              <i class="bi bi-broadcast-pin fs-1"></i>
            </div>
            <h5 class="card-title">Communauté</h5>
            <p class="card-text">Une communauté bienveillante pour échanger et communiquer à tout moment, avec d’autres passionnés ayant les mêmes envies d’apprendre que vous.</p>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6">
        <div class="card-3">
          <div class="card-body">
            <div class="fs-6 mb-3">
              <i class="bi bi-chat-heart fs-1"></i>
            </div>  
            <h5 class="card-title">Accessible à tous</h5>
            <p class="card-text">Nos modules sont accessibles gratuitement et quand vous le souhaitez. Chaque membre peut y contribuer à sa manière et partager ses connaissances.</p>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-6">
        <div class="card-4">
          <div class="card-body">
            <div class="fs-6 mb-3">
              <i class="bi bi-bookmark-star-fill fs-1"></i>
            </div>
            <h5 class="card-title">Mise en relation</h5>
            <p class="card-text">Des cursus recensant les meilleures ressources d’internet, soigneusement sélectionnées par nos membres.</p>
          </div>
        </div>
      </div>
  </div>
</section>



<!-- THEMES SECTION -->
  <section class="container">
    <h1 class="orange_underline">Nos cursus</h1>
      <div class="row justify-content-between py-5">
        <%@trainings.each do |training| %>
            
          <div class="col-md-4 col-lg-3 mb-3"> 
            <div class="card bg-primary text-light">
              <%= image_tag('code_bg.jpg', alt: "Background code theme card", class: 'card-img-top') %>
              <div class="card-body mt-2">
                <h5 class="card-title"><%= training.title %></h5>
                <p class="card-text my-4">
                  <%= training.description.truncate(60,separator:" ") %>
                </p>
                <%= link_to("Voir le cours", training_path(training.id), class:"btn btn-outline-secondary btn-sm") %>
              </div>
            </div>
          </div>

        <%end%>

      </div>
      <div class="row pb-5">
        <%= link_to trainings_path, class: "nav-link" do%>
          <i class="bi bi-chevron-double-right text-secondary fs-3"></i>
          <span class="text-deep_blue fs-4 align-center ms-3">Découvrez toutes nos formations</span> 
        <%end%>
      </div>
  </section>

